@page
@model CMS.Web.Pages.Companies.IndexModel
@using CMS.Web.Models // Required for DisplayNameFor if Company model is in this namespace

@{
    ViewData["Title"] = "Companies";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Company</a>
</p>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
        @Model.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

@if (Model.Companies != null && Model.Companies.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Companies[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies[0].PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies[0].Email)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Companies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    if (string.IsNullOrEmpty(Model.ErrorMessage)) // Only show "No companies found" if there isn't an error message already.
    {
        <p>No companies found.</p>
    }
}
